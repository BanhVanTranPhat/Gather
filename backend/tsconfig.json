{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "allowJs": true,
    "outDir": "./dist"
  },
  "include": ["**/*.ts", "**/*.js"],
  "exclude": ["node_modules"]
}
